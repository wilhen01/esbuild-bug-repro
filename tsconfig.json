{
  "compilerOptions": {
    // Settings for Node.js >= 12.9.0
    "lib": ["es2021"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "es2019",

    // React support
    "jsx": "react",
    "esModuleInterop": true,

    // Enable super strict setting
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,

    // Function code never has to be compiled outside zeit/ncc and ts-jest
    "noEmit": true
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
